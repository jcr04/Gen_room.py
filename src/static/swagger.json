{
  "swagger": "2.0",
  "info": {
    "title": "Sua API de Salas",
    "version": "2.0",
    "description": "Documentação interativa da API de Salas"
  },
  "paths": {
    "/rooms/{id}": {
      "get": {
        "summary": "Obtenha informações de uma sala por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da sala",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Informações da sala"
          },
          "404": {
            "description": "Sala não encontrada"
          }
        }
      },
      "put": {
        "summary": "Atualize uma sala existente por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da sala",
            "required": true,
            "type": "integer"
          },
          {
            "name": "room",
            "in": "body",
            "description": "Dados atualizados da sala",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RoomModel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sala atualizada com sucesso"
          },
          "400": {
            "description": "Solicitação inválida"
          },
          "404": {
            "description": "Sala não encontrada"
          }
        }
      },
      "delete": {
        "summary": "Exclua uma sala por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da sala",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Sala excluída com sucesso"
          },
          "404": {
            "description": "Sala não encontrada"
          }
        }
      }
    },
    "/rooms": {
      "get": {
        "summary": "Obtenha informações de todas as salas",
        "responses": {
          "200": {
            "description": "Lista de todas as salas",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RoomModel"
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crie uma nova sala",
        "parameters": [
          {
            "name": "room",
            "in": "body",
            "description": "Dados da nova sala",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RoomModel"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Sala criada com sucesso"
          },
          "400": {
            "description": "Solicitação inválida"
          }
        }
      }
    }
  },
  "definitions": {
    "RoomModel": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "room_type": {
          "type": "string"
        },
        "capacity": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "room_category": {
          "type": "string"
        },
        "shift": {
          "type": "string"
        }
      },
      "required": ["name", "room_type", "capacity", "description", "room_category", "shift"]
    }
  }
}
